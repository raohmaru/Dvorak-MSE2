	border color:
		left: 0
		top: 0
		width:	750
		height:	1046
		#radius: 24
		left width:   24
		right width:  24
		top width:    24
		bottom width: 24
		z index: 0
		visible: {styling.show_border}
	
	text solid box:
		left: 53
		top: {text_top(TEXT_BOX_OFFSET_Y)}
		right:  697
		bottom: {text_bottom(25)}
		z index: -1
		visible: {styling.text_box == "solid box"}
	
	text border box:
		left: 53
		top: {text_top(TEXT_BOX_OFFSET_Y)}
		right:  697
		bottom: {text_bottom(25)}
		left width:   3
		right width:  3
		top width:    3
		bottom width: 3
		z index: 0
		visible: {styling.text_box != "none"}
	
	value solid box:
		right: 700
		top: 50
		width: {value_width()}
		height: {value_height(VALUE_HEIGHT)}
		z index: -1
		visible: {card.value != "" and styling.value_box == "solid box"}
	
	value border box:
		right: 700
		top: 50
		width: {value_width()}
		height: {value_height(VALUE_HEIGHT)}
		left width:   3
		right width:  3
		top width:    3
		bottom width: 3
		z index: 0
		visible: {card.value != "" and styling.value_box != "none"}
	
	image border:
		left:	53
		top: script: image_top()
		width: 645
		height:	{image_height()}
		left width:   3
		right width:  3
		top width:    3
		bottom width: 3
		z index: 2
		visible: {styling.image_border}
	
	foil layer:
		left: 0
		top: 0
		width: 750
		height: 1046
		z index: 10
		render style: image
		image: {if styling.overlay == "" then nil else styling.overlay + "/overlay.png"}